{
    "info": {
        "_postman_id": "task-manager-api-collection",
        "name": "Task Manager API",
        "description": "A collection of API endpoints for the Express Task Manager application. This collection includes all CRUD operations for managing tasks stored in PostgreSQL.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Get All Tasks",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/tasks",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "tasks"
                    ]
                },
                "description": "Retrieves all tasks from the database. Returns a JSON array containing all tasks with their id, description, and status."
            },
            "response": []
        },
        {
            "name": "Create New Task",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"description\": \"Complete project documentation\",\n  \"status\": \"pending\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{base_url}}/tasks",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "tasks"
                    ]
                },
                "description": "Creates a new task in the database. Requires description and status fields in the request body. Returns a success message and the ID of the newly created task."
            },
            "response": []
        },
        {
            "name": "Update Task Status",
            "request": {
                "method": "PUT",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"status\": \"in progress\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{base_url}}/tasks/1",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "tasks",
                        "1"
                    ]
                },
                "description": "Updates the status of a specific task by ID. Requires the task ID in the URL path and the new status in the request body. Returns a success message if the task is found and updated."
            },
            "response": []
        },
        {
            "name": "Delete Task",
            "request": {
                "method": "DELETE",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/tasks/1",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "tasks",
                        "1"
                    ]
                },
                "description": "Deletes a specific task by ID. Requires the task ID in the URL path. Returns a success message if the task is found and deleted."
            },
            "response": []
        },
        {
            "name": "Get API Welcome",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        ""
                    ]
                },
                "description": "Returns a welcome message for the Task Manager API. Useful for testing if the server is running."
            },
            "response": []
        }
    ],
    "event": [
        {
            "listen": "prerequest",
            "script": {
                "type": "text/javascript",
                "exec": [
                    ""
                ]
            }
        },
        {
            "listen": "test",
            "script": {
                "type": "text/javascript",
                "exec": [
                    ""
                ]
            }
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:3000",
            "type": "string"
        }
    ]
}